apiVersion: apps/v1
kind: Deployment
metadata:
  name: cluster-svc
  labels:
    app: cluster-svc
spec:
  replicas: 1
  selector:
    matchLabels:
      app: cluster-svc
  template:
    metadata:
      labels:
        app: cluster-svc
    spec:
      containers:
      - name: cluster-svc
        image: "{{ edge_cloud_image }}:{{ edge_cloud_version }}"
        imagePullPolicy: Always
        command:
         - "cluster-svc"
         - "--notifyAddrs"
         - "controller:37001"
         - "--ctrlAddrs"
         - "controller:55001"
         - "--region"
         - "{{ region }}"
         - "--vaultAddr"
         - "https://{{ vault_vm_hostname }}:{{ vault_port }}"
         - "--useVaultCerts"
         - "--d"
         - "infra,notify,api"
         - "--flavor"
         - "x1.medium"
         - "--scrapeInterval"
         - "5s"
         - "--updateAll"
        env:
         - name: JAEGER_ENDPOINT
           value: "{{ jaeger_endpoint }}"
         - name: JAEGER_TAGS
           value: "environ={{ deploy_environ }},version={{ edge_cloud_version }}"
         - name: VAULT_ROLE_ID
           value: "{{ cluster_svc_role.role_id }}"
         - name: VAULT_SECRET_ID
           value: "{{ cluster_svc_role.secret_id }}"
      imagePullSecrets:
       - name: mexreg-secret 
