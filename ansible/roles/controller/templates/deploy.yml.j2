apiVersion: apps/v1
kind: Deployment
metadata:
  name: controller
  labels:
    app: controller
spec:
  replicas: {{ controller_replicas }}
  selector:
    matchLabels:
      app: controller
  template:
    metadata:
      labels:
        app: controller
    spec:
      containers:
      - name: controller
        image: "{{ edge_cloud_image }}:{{ edge_cloud_version }}"
        imagePullPolicy: Always
        resources:
          requests:
            cpu: "200m"
            memory: "1Gi"
          limits:
            cpu: "400m"
            memory: "2Gi"
        command:
         - "controller"
         - "--commonName"
         - "{{ controller_hostname }}"
         - "--region"
         - "{{ region }}"
         - "--apiAddr"
         - "0.0.0.0:55001"
         - "--httpAddr"
         - "0.0.0.0:36001"
         - "--notifyAddr"
         - "0.0.0.0:37001"
         - "--notifyParentAddrs"
         - "{{ console_vm_hostname }}:{{ mc_notify_srv_port }}"
         - "--notifyRootAddrs"
         - "{{ notifyroot_hostname }}:{{ notifyroot_port }}"
         - "--accessApiAddr"
         - "0.0.0.0:41001"
         - "--etcdUrls"  
         - "{{ etcd_cluster_client }}:2379"
         - "--edgeTurnAddr"
         - "{{ edgeturn_fqdn }}:6080"
         - "--vaultAddr"
         - "https://{{ vault_vm_hostname }}:{{ vault_port }}"
         - "--useVaultPki"
         - "--influxAddr"
         - "https://{{ influxdb_dns }}.{{ cloudflare_zone }}:8086"
         - "--registryFQDN"
         - "{{ gitlab_docker_hostname }}"
         - "--artifactoryFQDN"
         - "{{ artifactory_fqdn }}"
         - "--cloudletRegistryPath"
         - "{{ cloudlet_registry_path }}"
         - "-cloudletVMImagePath"
         - "{{ cloudlet_vm_path }}"
         - "--versionTag"
         - "{{ edge_cloud_version }}"
         - "--publicAddr"
         - "{{ controller_hostname }}"
         - "--deploymentTag"
         - "{{ deployment_tag_override | default(deploy_environ) }}"
         - "--autoUpgrade"
         - "-d"
         - "etcd,api,notify,upgrade,infra"
        env:
         - name: VAULT_ROLE_ID
           value: "{{ controller_role.role_id }}"
         - name: VAULT_SECRET_ID
           value: "{{ controller_role.secret_id }}"
         - name: VAULT_CRM_ROLE_ID
           value: "{{ crm_role.role_id }}"
         - name: VAULT_CRM_SECRET_ID
           value: "{{ crm_role.secret_id }}"
         - name: JAEGER_ENDPOINT
           value: "{{ jaeger_endpoint }}"
         - name: JAEGER_TAGS
           value: "environ={{ deploy_environ }},region={{ region }},version={{ edge_cloud_version }}"
         - name: ES_SERVER_URLS
           value: "{{ esproxy_address }}"

      imagePullSecrets:
       - name: mexreg-secret 

