apiVersion: apps/v1
kind: Deployment
metadata:
  name: dme
  labels:
    app: dme
spec:
  replicas: {{ dme_replicas }}
  selector:
    matchLabels:
      app: dme
  template:
    metadata:
      labels:
        app: dme
    spec:
      containers:
      - name: dme
        image: "{{ edge_cloud_image }}-dme:{{ edge_cloud_version }}"
        imagePullPolicy: Always
        resources:
          requests:
            cpu: "150m"
            memory: "100Mi"
          limits:
            cpu: "300m"
            memory: "200Mi"
        command:
         - "dme-server"
         - "--commonName"
         - "{{ dme_dns }}.{{ cloudflare_zone }}"
         - "--region"
         - "{{ region }}"
         - "--apiAddr"
         - "0.0.0.0:50051"
         - "--httpAddr"
         - "0.0.0.0:38001"
         - "--notifyAddrs"
         - "{{ controller_hostname }}:{{ controller_notify_port }}"
         - "--vaultAddr"
         - "{{ vault_address }}"
         - "--useVaultPki"
         - "--deploymentTag"
         - "{{ deployment_tag_override | default(deploy_environ) }}"
         - "--locverurl"
         - "{{ locver_url }}"
         - "--carrier"
         - "{{ dme_carrier }}"
         - "--cloudletKey"
         - '{"organization":"{{ operator_key }}","name":"{{ deploy_target }}-cloudlet"}'
         - "--toksrvurl"
         - "{{ toksrv_url }}"
         - "-d"
         - "locapi,dmedb,dmereq,notify"
        env:
         - name: LOCAPI_USER
           value: "{{ locapi_user }}"
         - name: LOCAPI_PASSWD
           value: "{{ locapi_passwd }}"
         - name: VAULT_ROLE_ID
           value: "{{ dme_role.role_id }}"
         - name: VAULT_SECRET_ID
           value: "{{ dme_role.secret_id }}"
         - name: JAEGER_ENDPOINT
           value: "{{ jaeger_endpoint }}"
         - name: JAEGER_TAGS
           value: "environ={{ deploy_environ }},region={{ region }},version={{ edge_cloud_version }}"
         - name: ES_SERVER_URLS
           value: "{{ esproxy_address }}"

      imagePullSecrets:
       - name: mexreg-secret
