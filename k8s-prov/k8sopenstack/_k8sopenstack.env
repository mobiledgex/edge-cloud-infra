# Needed environment various for k8sopenstack to function
# on a given cloudlet that is hosting Openstack
# which can in turn host kubernetes.
#

# copy _k8sopenstack.env to $HOME/.k8sopenstack.env
# copy  _k8sopenstack.toml to $HOME/.k8sopenstack.toml
# copy _k8sopenstack.userdata to $HOME/.k8sopenstack.userdata
# and source this file

export MEX_K8SOS_ENV=$HOME/.k8sopenstack.os.env
export MEX_K8SOS_CONFIG=$HOME/.k8sopenstack.toml
export MEX_K8SOS_USERDATA=$HOME/.k8sopenstack.userdata
